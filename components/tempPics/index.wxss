.temp-pics-wrapper {
  padding: 25px 0;
}
.pics-wrapper {
  display: flex;
  margin-bottom: 10px;
}
.pics-wrapper > .left {
  flex: 2.8;
  height: 180px;
  margin-right: 4px;
}
.pics-wrapper > .left > .cover-image {
  width: 100%;
  height: 100%;
}
.pics-wrapper > .right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}
.pics-wrapper > .right > .top {
  /* flex: 1 0 0; */
  height: 88px;
}
.pics-wrapper > .right > .top > .top-image {
  width: 100%;
  height: 100%;
}
.pics-wrapper > .right > .bottom {
  /* flex: 1 0 0; */
  height: 88px;
  position: relative;
}
.pics-wrapper > .right > .bottom > .num-wrapper {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  z-index: 1;
}
.pics-wrapper > .right > .bottom > .num-wrapper > .num {
  position: absolute;
  top: 50%;
  left: 0;
  right: 0;
  text-align: center;
  z-index: 2;
  color: #fff;
  font-size: 13px;
  transform: translateY(-50%);
}
.pics-wrapper > .right > .bottom > .bottom-image {
  width: 100%;
  height: 100%;
}
.title {
  text-align: justify;
  font-size: 17px;
  font-weight: 500;
  line-height: 1.41;
  color: #494949;
  margin-bottom: 6px;
}
.author {
  font-size: 12px;
  color: #ccc;
  margin-top: 10px;
}