.template-text-wrapper {
  display: flex;
  flex-direction: column;
  /* border-bottom: 1rpx solid #e3e3e3; */
  padding: 25px 0;
}
.template-text-wrapper > .top {
  display: flex;
  margin-bottom: 10px;
}
.template-text-wrapper > .bottom {
  font-size: 12px;
  color: #ccc;
}
.template-text-wrapper > .top > .inner-left {
  flex: 1;
}
.template-text-wrapper > .top > .inner-left > .inner-top {
  text-align: justify;
  font-size: 17px;
  font-weight: 500;
  line-height: 1.41;
  color: #494949;
  margin-bottom: 6px;
}
.template-text-wrapper > .top > .inner-left > .inner-bottom {
  text-align: justify;
  color: #aaa;
  font-size: 12px;
  line-height: 1.5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
}
.template-text-wrapper > .top > .inner-right {
  width: 25%;
  margin-left: 25px;
}
.template-text-wrapper > .top > .inner-right > .cover-image {
  width: 100%;
}