@import '/templates/star/star.wxss';

.card-wrapper {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100px;
}
.image-container {
  width: inherit;
}
.image {
  width: inherit;
  height: 142px;
}
.title {
  box-sizing: border-box;
  font-size: 30rpx;
  overflow: hidden;
  width: inherit;
  white-space: nowrap;
  text-overflow: ellipsis;
  text-align: center;
}
.rating {
  display: flex;
  align-items: center;
}
.score {
  font-size: 24rpx;
  color: #aaa;
}